<% if @properties.any? %>
    <div class="container-fluid">
      <div class="row">
  <% @properties.each do |property| %>
        <div class="col-sm-4 col-md-4">
          <div class="thumbnail">
          <% if property.pictures.any? %>
            <%= image_tag property.pictures.first.image(:large) %>
          <% else %>
          <img style="width: 400px;" src="/assets/No_image_available.svg" />
          <% end %>
              <div class="caption">
                <h3> <%= property.name %> </h3>
                <p><%= property.description %></p>
                <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
              </div>
            </div>
          </div>
  <% end %>
          </div>
<% else %>
<div class="container">
  <div class="jumbotron">
    <h2>  No properties currently available</h2>
    <p>Please check back again soon or <a href="#">contact us</a> to discuss renting your property with us</p>
  </div>
</div>
    </div>
<% end %>
